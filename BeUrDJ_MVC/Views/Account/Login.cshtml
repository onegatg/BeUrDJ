@model LoginViewModel

@{ ViewBag.Title = "User Login";}



        
<div class="col-md-12 loginContainer">
    <h1>User Login</h1>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserName">User Name</label>
            <input asp-for="UserName" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label style="padding-right:.5em" asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <input type="submit"  value="Login" class="btn btn-primary" />
        <button type="button" onclick="window.location.href = 'https://beurdj.com/Account/Register'" class="btn btn-secondary" style="margin-left:5em">Create Account</button>
    </form>
</div>
