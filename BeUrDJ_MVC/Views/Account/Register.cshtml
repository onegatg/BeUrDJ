@model RegisterViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    
        <div class="col-md-12" style="position:fixed;top:40%;left:50%;margin-top:-50px;margin-left:-100px;">
            <h1>Register</h1>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" style="margin-right:.5em"></label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" style="word-wrap:initial;max-width:70px"></label>
                    <input asp-for="ConfirmPassword" style="margin-left:.25em" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-left:5em">Register</button>
            </form>
        </div>
    
</body>
</html>
