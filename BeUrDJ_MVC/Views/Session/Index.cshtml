@model BeUrDJ_MVC.Models.ViewModels.SessionListViewModel
@{
    ViewBag.Title = "BeUrDJ Sesssions";
}
@*

    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<link rel="stylesheet" href="~/css/session.css" />
@if (Model.spotifyStatus)
{
    <div class="row">
        <div class="col-md-12">

            <h1>Created Sessions</h1>
            @if (Model.createdSessions.Count != 0)
            {
                @foreach (var cSession in Model.createdSessions)
                {
                    <div class="card" onclick="@("window.location.href='" + @Url.Action("DisplayQueue", "Song", new { sessionId = cSession.SessionID }) + "'");">
                        <p>
                            @cSession.SessionName
                            <br />
                            @cSession.SessionDescription
                            <br />
                        </p>
                    </div>
                }
            }
            <div class="card" onclick="@("window.location.href='createSession'")" style="text-align: center;">
                <i style=" height: auto; color: white;font-size:100px; vertical-align: middle;">+</i>
            </div>


        </div>
    </div>
}
    <div class="row">
        <div class="col-md-12">
            <h1>Join Sessions</h1>
            @if (Model.joinSessions.Count != 0)
            {
                @foreach (var jSession in Model.joinSessions)
                {
                    <div class="card" onclick="@("window.location.href='" + @Url.Action("DisplayUserQueue", "Song", new { sessionId = jSession.SessionID }) + "'");">
                        <p>
                            @jSession.SessionName
                            <br />
                            @jSession.SessionDescription
                            <br />
                        </p>
                    </div>
                }
            }
            else
            {
                <div>
                    <h4>Oops! No Joinable Sessions Right Now.</h4>
                </div>
            }
        </div>
    </div>

